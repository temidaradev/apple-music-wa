{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "apple-music-wa",
  "version": "0.1.0",
  "identifier": "com.temidaradev.apple-music-wa",
  "build": {
    "beforeDevCommand": "echo 'Skipping frontend build'",
    "devUrl": "https://music.apple.com",
    "beforeBuildCommand": "echo 'Skipping frontend build'",
    "frontendDist": "https://music.apple.com"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Apple Music",
        "width": 1200,
        "height": 800,
        "url": "https://music.apple.com",
        "userAgent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    },
    "enableGTKAppId": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
